<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enduser.lostpets.AboutActivity">
    <!-- TODO add string to string values -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_margin="4dp"
            android:textSize="27sp"
            android:textStyle="bold"
            android:text="A message to all pet lovers"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_margin="4dp"
            android:text="This application is intended to help find your pet. I do not know what I would do if I lost my pets. Any bit of information can help and I sincerely hope that your pet is found and returned safely to you. "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:layout_margin="4dp"
            android:layout_width="match_parent"
            android:layout_height="320dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/about_activity_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <me.relex.circleindicator.CircleIndicator
                android:id="@+id/about_activty_circle_idicator"
                android:layout_alignParentBottom="true"
                android:layout_width="match_parent"
                android:layout_height="48dp"/>

        </RelativeLayout>


    </LinearLayout>

</ScrollView>
