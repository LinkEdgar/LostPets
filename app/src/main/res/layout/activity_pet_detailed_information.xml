<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enduser.lostpets.PetDetailedInformation">

    <!-- TODO fix button layout -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="240dp">
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <android.support.v7.widget.CardView
                    android:layout_width="320dp"
                    android:padding="16dp"
                    android:layout_height="match_parent"
                    android:layout_margin="8dp">

                    <ImageView
                        android:padding="4dp"
                        android:id="@+id/detail_picture_one"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginRight="8dp"
                        android:src="@drawable/no_image" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:padding="16dp"
                    android:layout_margin="8dp"
                    android:layout_width="320dp"
                    android:layout_height="match_parent">
            <ImageView
                android:padding="4dp"
                android:id="@+id/detail_picture_two"
                android:layout_marginRight="8dp"
                android:src="@drawable/no_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:padding="16dp"
                    android:layout_margin="8dp"
                    android:layout_width="320dp"
                    android:layout_height="match_parent">

            <ImageView
                android:padding="4dp"
                android:id="@+id/detail_picture_three"
                android:layout_marginRight="8dp"
                android:src="@drawable/no_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />
                </android.support.v7.widget.CardView>
            </LinearLayout>


        </HorizontalScrollView>
        <!--TODO add an indication for scroll function -->
        <ImageView
            tools:src="@mipmap/ic_launcher_round"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:padding="2dp"
            android:layout_marginRight="12dp"
            android:layout_marginLeft="12dp"
            android:textSize="18sp"
            tools:text="It was the best of times it was the worst of times, but niggas didn't even care honestly. That's the sad truth "
            android:layout_marginTop="8dp"
            android:id="@+id/display_pet_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginTop="4dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Found this pet"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <Button
                android:textColor="@color/white"
                android:backgroundTint="@color/colorPrimary"
                android:layout_weight="1"
                android:text="Lost this pet"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

        </LinearLayout>
    </LinearLayout>



</ScrollView>
