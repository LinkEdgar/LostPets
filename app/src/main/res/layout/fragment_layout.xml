<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- TODO add color and customization to tabs -->



    <android.support.design.widget.NavigationView
        android:layout_gravity="start"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_gravity="center"
                android:src="@mipmap/ic_launcher_round"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <ListView
                android:id="@+id/navigation_list_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </ListView>

        </LinearLayout>


    </android.support.design.widget.NavigationView>


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                app:titleTextColor="@color/white"
                android:background="@color/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageButton
                        android:background="@color/colorPrimary"
                        android:id="@+id/main_activity_filter_button"
                        android:layout_marginRight="6dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_action_filter_search"
                        android:layout_alignParentRight="true"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <android.support.v7.widget.SearchView
                        android:inputType="textCapSentences"
                        app:iconifiedByDefault="false"
                        android:id="@+id/searchViewMainActivity"
                        android:layout_toRightOf="@+id/navigation"
                        android:layout_width="260dp"
                        android:layout_height="wrap_content"/>
                    <ImageButton
                        android:background="@color/colorPrimary"
                        android:layout_centerInParent="true"
                        android:id="@+id/navigation"
                        android:layout_alignParentLeft="true"
                        android:src="@drawable/ic_action_main_menu"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />
                    <TextView
                        android:textColor="@color/white"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="12dp"
                        android:textStyle="bold"
                        android:textSize="22dp"
                        android:layout_toRightOf="@+id/navigation"
                        android:id="@+id/main_activity_app_name"
                        android:text="LostPets"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    <ImageButton
                        android:layout_marginRight="6dp"
                        android:layout_centerInParent="true"
                        android:background="@color/colorPrimary"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_done"
                        android:id="@+id/main_activity_submit_pet"
                        android:layout_width="32dp"
                        android:layout_height="32dp" />

                </RelativeLayout>
        </android.support.v7.widget.Toolbar>
        </FrameLayout>

        <android.support.design.widget.TabLayout
            app:tabMode="fixed"
            android:elevation="6dp"
            android:layout_below="@+id/fragment_toolbar"
            android:id="@+id/fragment_tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></android.support.design.widget.TabLayout>

        <!--Allows fragments to be flipped from left to right -->
        <android.support.v4.view.ViewPager
            android:id="@+id/view_pager"
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            />
    </LinearLayout>


</android.support.v4.widget.DrawerLayout>