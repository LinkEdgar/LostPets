<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.enduser.lostpets.MessengerActivity">
    <include
        android:id="@+id/message_toolbar"
        layout="@layout/universal_toolbar"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_alignParentTop="true" />

    <TextView
        android:textSize="18dp"
        android:text="No messages yet, start a conversation"
        android:visibility="gone"
        android:id="@+id/messenger_no_message_textview"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.RecyclerView
        android:layout_above="@+id/linear_layout_for_messages"
        android:layout_marginTop="4dp"
        android:layout_below="@+id/message_toolbar"
        android:layout_centerInParent="true"
        android:scrollbars="vertical"
        android:id="@+id/message_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v7.widget.RecyclerView>


    <LinearLayout
        android:id="@+id/linear_layout_for_messages"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:id="@+id/messenger_gallery_select_"
            android:src="@mipmap/ic_gallery_select_color"
            android:layout_width="48dp"
            android:layout_height="48dp" />
        <android.support.v7.widget.CardView
            android:elevation="0dp"
            android:visibility="gone"
            android:id="@+id/messenger_cardview"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_centerInParent="true"
                    android:layout_margin="1dp"
                    android:id="@+id/messenger_activity_selected_image"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
                <ImageButton
                    android:elevation="3dp"
                    android:id="@+id/messenger_cancel_image_button"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:visibility="gone"
                    android:src="@mipmap/ic_cancel"
                    android:layout_width="48dp"
                    android:layout_height="48dp" />
                <ProgressBar
                    android:layout_centerInParent="true"
                    android:visibility="gone"
                    android:id="@+id/messenger_activity_progress_bar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </android.support.v7.widget.CardView>
        <!--

        <ImageView
            android:id="@+id/messenger_activity_selected_image"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:maxHeight="200dp"/>
            -->
        <EditText
            android:textSize="18sp"
            android:maxHeight="120dp"
            android:id="@+id/messenger_edit_text"
            android:inputType="textMultiLine|textCapSentences"
            android:layout_marginLeft="4dp"
            tools:text="Hello"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <ImageButton
            android:id="@+id/messenger_send_button"
            android:src="@mipmap/ic_action_send_button"
            android:layout_width="48dp"
            android:layout_height="48dp" />


    </LinearLayout>

</RelativeLayout>
