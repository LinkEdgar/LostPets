<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/message_item_profile_picture"
        android:layout_width="55dp"
        android:layout_height="55dp"
        app:civ_border_width="2dp"
        app:civ_border_color="#FF000000"/>


    <TextView
        android:id="@+id/message_item_user_name"
        android:layout_toRightOf="@+id/message_item_profile_picture"
        tools:text="Generic Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_marginRight="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/message_item_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            tools:text="Hello this is a message from XXX I have found your pet"
            android:id="@+id/message_item_user_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


</RelativeLayout>