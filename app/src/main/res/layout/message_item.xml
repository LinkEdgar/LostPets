<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/message_item_profile_picture"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/no_image"
        />


    <TextView
        android:id="@+id/message_item_user_name"
        android:layout_toRightOf="@+id/message_item_profile_picture"
        tools:text="Generic Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <android.support.v7.widget.CardView
        android:layout_centerInParent="true"
        android:layout_toRightOf="@+id/message_item_profile_picture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            tools:text="Hello this is a message from XXX I have found your pet"
            android:id="@+id/message_item_user_message"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </android.support.v7.widget.CardView>


</RelativeLayout>